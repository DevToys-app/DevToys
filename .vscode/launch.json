    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (MacOS)",
            "type": "dotnet-meteor.debugger",
            "request": "launch",
            "preLaunchTask": "dotnet-meteor: Build"
        },
        {
            "name": "Debug (Windows)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug/AnyCPU/DevToys.Windows/net7.0-windows/DevToys.Windows.exe",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "preLaunchTask": "BuildWindows"
        },
        {
            "name": "Debug (CLI)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug/AnyCPU/DevToys.CLI/net7.0/DevToys.CLI.exe",
            "args": [],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "preLaunchTask": "BuildCLI"
        }
    ]
}