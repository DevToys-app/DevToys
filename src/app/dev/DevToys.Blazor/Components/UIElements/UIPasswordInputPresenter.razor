@namespace DevToys.Blazor.Components.UIElements
@using DevToys.Api;
@inherits StyledComponentBase

<UITextInputWrapper @ref="_textInputWrapper" UITextInput="@UIPasswordInput">
    <TextBox IsVisible="@UIPasswordInput.IsVisible"
             IsEnabled="@(UIPasswordInput.IsEnabled && IsActuallyEnabled)"
             Text="@UIPasswordInput.Text"
             IsReadOnly="@UIPasswordInput.IsReadOnly"
             TextChanged="@OnTextChanged"
             Type="TextBoxTypes.Password"
             ParentComponent="_textInputWrapper" />
</UITextInputWrapper>