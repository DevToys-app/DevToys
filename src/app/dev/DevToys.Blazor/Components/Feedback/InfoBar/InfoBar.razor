                                }
                            </span>
                        </div>
                    }

                    <div class="info-bar-content">
                        @if (!string.IsNullOrEmpty(Title))
                        {
                            <TextBlock Appearance="TextBlockAppearance.BodyStrong" Text="@Title" />
                        }

                        @if (!string.IsNullOrEmpty(Message))
                        {
                            <TextBlock Text="@Message" />
                        }
                    </div>
                 </div>

                @if (!string.IsNullOrWhiteSpace(ActionButtonText))
                {
                    <div class="info-bar-button action">
                        <Button Appearance="@(IsActionButtonAccent ? ButtonAppearance.Accent : ButtonAppearance.Neutral)"
                                @onclick="@OnActionButtonClicked">
                            <TextBlock Text="@ActionButtonText" NoWrap="true"/>
                        </Button>
                    </div>
                }

                @if (IsClosable)
                {
                    <!-- TODO: Localize-->
                    <div class="info-bar-button">
                        <Button Appearance="ButtonAppearance.Stealth"
                                aria-label="Close"
                                Height="36"
                                Width="36"
                                @onclick="@OnCloseButtonClicked">
                            <FontIcon Glyph="@('\uF369')" />
                        </Button>
                    </div>
                }
            </div>
        }
    </Container>
</CascadingValue>