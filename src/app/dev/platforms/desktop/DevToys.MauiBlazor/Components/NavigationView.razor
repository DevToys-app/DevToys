@using DevToys.Localization.Strings.MainMenu;

@inherits FluentComponentBase

<CascadingValue Value="this" IsFixed=false Name="NavigationView">
    <Grid>
        <RowDefinitions>
            <RowDefinition Height="Auto" /> @* Back Button *@
            <RowDefinition Height="Auto" /> @* Hamburger Menu, Search Bar & Content *@
            <RowDefinition Height="*" />    @* Top Menu *@
            <RowDefinition Height="Auto" /> @* Bottom Menu *@
        </RowDefinitions>
        <ColumnDefinitions>
            <ColumnDefinition Width="320" /> @* Side bar *@
            <ColumnDefinition Width="*" />   @* Content *@
        </ColumnDefinitions>
        <Content>
            @* Back Button *@
            <GridElement Row="1" Column="1" VerticalAlignment="@Alignment.Start">
                <StackPanel Orientation="@Orientation.Horizontal" HorizontalAlignment="StackHorizontalAlignment.Left" Style="padding: 4px 4px 0px 4px;">
                    <FluentButton Style="width: 40px; height: 36px">
                        <FluentIcon Name="@FluentIcons.ArrowLeft" Size="@IconSize.Size16" Color="Color.Neutral" />
                    </FluentButton>
                </StackPanel>
            </GridElement>

            @* Hamburger Menu & Search Bar *@
            <GridElement Row="2" Column="1" VerticalAlignment="@Alignment.Start">
                <StackPanel Orientation="@Orientation.Vertical" Style="padding: 4px 4px 0px 4px;">
                    <FluentButton Style="width: 40px; height: 36px">
                        <FluentIcon Name="@FluentIcons.Navigation" Size="@IconSize.Size16" Color="Color.Neutral" />
                    </FluentButton>
                    <FluentSearch Placeholder="@MainMenu.Search" Style="margin-top: 2px; margin-bottom: 8px; margin-left: 12px; margin-right: 12px; width: -webkit-fill-available;" />
                </StackPanel>
            </GridElement>

            @* Top Menu *@
            <GridElement Row="3" Column="1" VerticalAlignment="@Alignment.Start">
                <StackPanel Orientation="@Orientation.Vertical" Style="padding: 4px 4px 0px 4px;">
                    @MenuItemsSource
                </StackPanel>
            </GridElement>

            @* Bottom Menu *@
            <GridElement Row="4" Column="1" VerticalAlignment="@Alignment.End">
                <StackPanel Orientation="@Orientation.Vertical" Style="padding: 4px 4px 4px 4px;">
                    @FooterMenuItemsSource
                </StackPanel>
            </GridElement>

            @* Content of the Navigation View *@
            <GridElement Row="2" RowSpan="4" Column="2" HorizontalAlignment="@Alignment.Stretch" VerticalAlignment="@Alignment.Stretch">
                @Content
            </GridElement>
        </Content>
    </Grid>
</CascadingValue>