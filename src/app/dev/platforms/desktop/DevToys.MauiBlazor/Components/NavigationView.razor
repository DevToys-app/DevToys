@inherits FluentComponentBase

<CascadingValue Value="this" IsFixed=false Name="NavigationView">
    <Grid>
        <RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </RowDefinitions>
        <ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </ColumnDefinitions>
        <Content>
            @* Search Bar *@
            <GridElement Row="1" Column="1" HorizontalAlignment="@Alignment.Stretch" VerticalAlignment="@Alignment.Start">
                <FluentSearch Placeholder="Type to search for tools..." Style="margin-left: 22px; margin-right: 22px" />
            </GridElement>

            @* Top Menu *@
            <GridElement Row="2" Column="1" HorizontalAlignment="@Alignment.Stretch" VerticalAlignment="@Alignment.Start">
                <StackPanel Orientation="@Orientation.Vertical">
                    @MenuItemsSource
                </StackPanel>
            </GridElement>

            @* Bottom Menu *@
            <GridElement Row="3" Column="1" HorizontalAlignment="@Alignment.Stretch" VerticalAlignment="@Alignment.End">
                <StackPanel Orientation="@Orientation.Vertical">
                    @FooterMenuItemsSource
                </StackPanel>
            </GridElement>

            @* Content of the Navigation View *@
            <GridElement Row="1" RowSpan="3" Column="2" HorizontalAlignment="@Alignment.Stretch" VerticalAlignment="@Alignment.Stretch">
                @Content
            </GridElement>
        </Content>
    </Grid>
</CascadingValue>