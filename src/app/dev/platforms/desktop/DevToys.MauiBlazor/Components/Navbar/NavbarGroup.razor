@namespace DevToys.MauiBlazor.Components
@using DevToys.Core.Tools.ViewItems;
@inherits NavbarItem

<CascadingValue Value="this" IsFixed="true">
    <NavbarItem Class="nav-group"
                Item="Item"
                Selected="Selected"
                OnSelected="OnSelected"
                Title="@Title"
                IconFontFamily="@IconFontFamily"
                IconGlyph="@IconGlyph">
        <div @onclick:stopPropagation="true" @onclick:preventDefault="true">
            <Button Type="@ButtonType.Button" Appearance="@ButtonAppearance.Stealth" IconOnly="true"
                    class="collapsed"
                    @onclick=OnToggleExpanderClickAsync
                    aria-expanded="true">
                <FontIcon Class="icon-active" FontFamily="FluentSystemIcons" Glyph="@('\uf2a6')" />
            </Button>
        </div>
    </NavbarItem>
    <li class="nav-item nav-group-child">
        <ul aria-labelledby="collapse-list-converters" class="@GroupClass" id="collapse-list-converters">
            @ChildContent
        </ul>
    </li>
</CascadingValue>