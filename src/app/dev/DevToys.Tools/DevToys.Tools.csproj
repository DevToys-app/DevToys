<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(NetCore)</TargetFrameworks>

    <!-- See https://learn.microsoft.com/en-us/dotnet/core/project-sdk/msbuild-props#enabledynamicloading -->
    <EnableDynamicLoading>true</EnableDynamicLoading>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\DevToys.Api\DevToys.Api.csproj">
      <!-- This tells MSBuild to not copy DevToys.Api.dll to the output -->
      <Private>false</Private>
      <!-- This setting has the same effect as <Private>false</Private> but works on package references -->
      <ExcludeAssets>runtime</ExcludeAssets>
    </ProjectReference>

    <!--
    <PackageReference Include="DevToys.Api" Version="2.0.0">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    -->
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Tools\Sample\Sample.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Sample.resx</DependentUpon>
    </Compile>
    <Compile Update="Tools\Settings\Settings.Designer.cs">
      <DependentUpon>Settings.resx</DependentUpon>
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Update="Tools\Sample\Sample.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Sample.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Tools\Settings\Settings.resx">
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Uno.Core.Extensions.Logging.Singleton" />
    <PackageReference Include="Newtonsoft.Json" />
  </ItemGroup>
</Project>